#include <iostream>
using namespace std;

int main() {
    int n, y, sum = 0;

    cout << "Enter a number: ";
    cin >> n;

    while (n > 0) {
        y = n % 10;      // extract last digit
        sum = sum + y;   // add digit to sum
        n = n / 10;      // remove last digit
    }

    cout << "Sum of digits = " << sum << endl;

    return 0;
}
